{
   "manifest_version": 2,
   "name": "HeroToZero",
   "version": "0.1.0",
   "author": "Dr. Cheap",
   "description": "Hero Image Eliminator",
   "homepage_url": "https://github.com/drcheap/HeroToZero",
   "permissions": ["storage", "tabs", "http://*/*", "https://*/*"],

   "browser_specific_settings": {
      "gecko": {
         "id": "herotozero@drcheap.com"
      }
   },

   "icons": {
     "16": "icons/logo-16-dark.png",
     "32": "icons/logo-32-dark.png",
     "48": "icons/logo-48-dark.png",
     "64": "icons/logo-64-dark.png",
     "96": "icons/logo-96-dark.png",
     "128": "icons/logo-128-dark.png"
   },

   "options_ui": {
     "page": "options.html",
     "browser_style": false
   },

   "background": {
      "scripts": ["common.js", "background.js"]
   },

   "browser_action": {
      "browser_style": true,
      "default_title": "Initializing...",
      "default_icon": {
         "16": "icons/logo-16-dark.png",
         "32": "icons/logo-32-dark.png"
      },
      "theme_icons": [{
            "light": "icons/logo-16-light.png",
            "dark": "icons/logo-16-dark.png",
            "size": 16
         }, {
            "light": "icons/logo-32-light.png",
            "dark": "icons/logo-32-dark.png",
            "size": 32
      }]
   },

   "content_scripts": [
       {
         "matches": ["<all_urls>"],
         "js": ["common.js", "content-script.js"],
         "run_at": "document_idle"
       }
    ],

    "web_accessible_resources": ["icons/placeholder.png"]
}
